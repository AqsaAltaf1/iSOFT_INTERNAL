<p><b>Hours in a day</b></p>
<%= form.fields_for :time_policy do |ff| %>
  <%= ff.fields :hours_per_day, model: OpenStruct.new(form.object.time_policy.hours_per_day) do |hours_per_day| %>
    <div class="mt-3">
      <%= hours_per_day.radio_button :hourly_deduction, false, checked: true, data: { controller: "time-policy-rules", action: "input->time-policy-rules#hoursInDay", value: false} %>
      <%= hours_per_day.label :hourly_dedeuction, "No", value: "false"%><br>
      <%= hours_per_day.radio_button :hourly_deduction, true, data: { controller: "time-policy-rules", action: "input->time-policy-rules#hoursInDay", value: true} %>
      <%= hours_per_day.label :hourly_dedeuction, "Yes. Salary are to be deducted if less working hours.", value: "true" %>
      <p> Deduct <%= hours_per_day.number_field :deduct_days %> days if the effective hours in a month is less than<%= hours_per_day.number_field :working_hours %>hours</p>
    </div>
    <div class="text-center mt-2 mb-2">
      <%= link_to 'Back','#', data: {controller: "time-policy-rules", action: "click->time-policy-rules#earlyOut"} %>
      <%= link_to 'Next','#', data: {controller: "time-policy-rules", action: "click->time-policy-rules#missingSwipe"} %>
    </div>
  <% end %>  
<% end %>

