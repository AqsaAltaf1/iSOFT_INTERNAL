<%= turbo_frame_tag "remote_modal" do %>

    <div class="modal fade" id="uploadattachmodal" tabindex="-1" aria-labelledby="newItemRemoteModalLabel" aria-hidden="true" data-controller="remote-modal" data-action="turbo:before-render@document->remote-modal#hideBeforeRender">
        <div class="modal-dialog modal-dialog-centered" role="document">
            <div class="modal-content" id="modal_content">
                <div class="modal-header justify-content-center">
                    <h5 class="modal-title"><%= title %></h5>
                </div>
                <div class="modal-body remote_modal_body" id="remote_modal_body">
                    <label for="formFile" class="form-label">Upload File/Folder</label>
                    <%= yield %>
                </div>
            </div>
        </div>
    </div>
<% end %>
