<section>
    <div class="container-fluid">
    <div class="ms-5 ps-3">
        <% if @unread.count > 0 %>
            <div
            class="row justify-content-between align-items-center p-3 unreadnotification"
            >
                <div class="col-3">
                    <p class="mb-0">Unread</p>
                </div>
                <div class="col-3 text-end">
                    <%= link_to 'Mark all as read',  mark_all_notifications_as_read_path, method: :post, remote: true, class: "mb-0"%>
                </div>
            </div>
            <div class="row unreadnoti p-2">
                <div class="col-12">
                    <% current_user.notifications.unread.each do |notification| %>
                        <a href="<%=notification.to_notification.url%>" class="list-group-item">
                            <div class="row g-0">
                                <div class="col-auto me-2">
                                <img src="../assets/icons/notiuser.svg" alt="" />
                                </div>
                                <div class="col-11">
                                <p class="text-dark mb-0">
                                
                                    <%=  notification.to_notification.message %>
                                </p>
                                <span class="text-muted small mt-1">
                                    <%= time_ago_in_words(notification.created_at.to_datetime) + ' ago'%>
                                </span>
                                </div>
                            </div>
                        </a>
                    <% end %>
                    
                </div>
            </div>
        <% end %>
        <div
        class="row justify-content-between align-items-center p-3 unreadnotification"
        >
        <div class="col-3">
            <p class="mb-0">Read</p>
        </div>
        </div>
        <div class="row readnoti p-2">
            <div class="col-12">
                <% current_user.notifications.read.each do |notification| %>
                    <a href="<%=notification.to_notification.url%>" class="list-group-item">
                        <div class="row g-0">
                            <div class="col-auto me-2">
                            <img src="../assets/icons/notiuser.svg" alt="" />
                            </div>
                            <div class="col-11">
                            <p class="text-dark mb-0">
                                <%=  notification.to_notification.message %>
                            </p>
                            <span class="text-muted small mt-1">
                                <%= time_ago_in_words(notification.created_at.to_datetime) + ' ago'%>
                            </span>
                            </div>
                        </div>
                    </a>
                <% end %>
            </div>
        </div>
    </div>
    </div>
</section>