<%= form_for @project  do |f| %>
  <% if @project.errors.any? %>
    <div class="text-danger">
      <h5><%= pluralize(@project.errors.count, "error") %> prohibited this project from being saved:</h5>
      <ul>
        <% @project.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="mb-3">
     <%= f.label :Project_Name ,class:'form-label' %>
     <%= f.text_field :name, placeholder: "Please enter a project name" ,required: true ,class:'form-control' %>
  </div>
  <div class="mb-3">
  <%= f.label :Description ,class:'form-label' %>
  <%= f.text_area :description ,class:'form-control' %>
  </div>
  <div class="mb-3">
    <%= f.label :Assign_Users ,class:'form-label' %>
    <%= f.collection_select :user_ids, User.user, :id, :full_name, { } , { multiple: true, include_blank: false, class: 'form-select ' , id: 'assign_user' } %>
  </div>
  
  <div class="text-center">
    <%= f.submit @project.new_record? ? "Create " : "Update ", class:"btn addprojectbutton  " %>
  </div>
<%end%>
<script type="text/javascript">
$("#assign_user").each(function () {
  $(this).select2({
    theme: "bootstrap-5",
    placeholder: "Please select users",
  });
});
</script>