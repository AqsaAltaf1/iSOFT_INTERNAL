  <div class="container-fluid" data-controller="data-table" data-table-id="project-table">
    <div class="row">
      <div class="col-12">
        <div class="text-center">
          <h4 class="emp-h4">Projects</h4>
        </div>
        <div class="text-end mb-3">
          <%= link_to(new_project_path, class: "btn addemployeebtn", data: { turbo_frame: "remote_modal" }) do %>
            +Add New
          <% end %>
        </div>
        <div class="table-responsive admin-projecttable">
          <table id="project-table" class="display" style="width: 100%">
            <thead>
              <tr>
                <th>Project Name</th>
                <th>Project Description</th>
                <th>Action</th>
              </tr>
            </thead>
              <tbody>
              <% @projects&.each do |project| %>
                <tr>
                  <td><%=project.name%></td>
                  <td>
                      <%=project.description%>
                  </td>
                  <td>
                    <%= link_to(edit_project_path(project), data: { turbo_frame: "remote_modal" }) do%>
                        <img src="../../assets/icons/edit.svg" alt="" />
                    <%end%>
                    <%= link_to( project, data: { turbo_method: :delete, turbo_confirm: 'Do you want to delete Project?' }) do %>
                        <img src="../../assets/icons/delete.svg" alt="" />
                    <% end %>
                  </td>
                </tr>
              <%end%>
              </tbody>
          </table>
        </div> 
      </div>
    </div>
  </div>
<style>
.dataTables_length{
  margin-bottom:10px;
}
#project-table_filter{
  margin-bottom:10px;
}
