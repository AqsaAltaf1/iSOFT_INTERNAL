<div class="card">
<div class="card-body">
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
  <div class="row justify-content-center mb-2">
    <div class="col-6 text-center">
      <div class="edit-profile-image-div">
        <% if resource.avatar.attached? %>
            <%= cl_image_tag(resource.avatar_thumbnail,class: 'rounded-circle border') %>
            <% end %>
          <%= f.file_field :avatar, accept: "image/*" , id:'edit--profilepic' ,class:'visually-hidden' %>
          <label for="edit--profilepic" class="form-label">
            <span>
              <i class="fa-solid fa-camera"></i>
            </span>
          </label>
      </div>
    </div>
  </div>
  <hr>
        <div class="row">
              <div class="col-md-6">
                <div class="mb-3">
                  <%= f.label :first_name,class:'form-label' %>
                  <%= f.text_field :first_name,class:'form-control' %>
                </div>
              </div>
              <div class="col-md-6">
                <div class="mb-3">
                  <%= f.label :last_name,class:'form-label' %>
                  <%= f.text_field :last_name,class:'form-control' %>
                </div>
              </div>
              <div class="col-md-6">
                <div class="mb-3">
                  <label for="joinig-date" class="form-label"
                    >Joinig Date</label
                  >
                  <input
                    type="date"
                    class="form-control"
                    id="joinig-date"
                    readonly
                    aria-describedby="emailHelp"
                  />
                </div>
              </div>
              <div class="col-md-6">
                <div class="mb-3 position-relative" data-controller="password-toggle" >
                    <%= f.label :new_password,class:'form-label' %>
                    <%= f.password_field :password, autocomplete: "new-password",class:'form-control' %>
                    <a data-action="click->password-toggle#password" class="password-field-icon-2 far fa-eye-slash"></a>
                </div>
              </div>
              <div class="col-md-6">
                <div class="mb-3 position-relative" data-controller="password-toggle">
                  <%= f.label :password_confirmation,class:'form-label' %>
                  <%= f.password_field :password_confirmation, autocomplete: "new-password",class:'form-control' %>
                  <a data-action="click->password-toggle#password" class="password-field-icon-2 far fa-eye-slash"></a>
                </div>
              </div>
              <div class="col-md-6">
                <div class="mb-3">
                  <%= f.label :current_password,class:'form-label'  %>
                  <%= f.password_field :current_password, autocomplete: "current-password",class:'form-control', required: true %>
                </div>
              </div>
            </div>

              <div class="col-md-6">
                <div class="mb-3">
                  <label for="role" class="form-label">
                    Role</label
                  >
                  <input
                    type="text"
                    class="form-control"
                    id="role"
                    readonly
                    aria-describedby="emailHelp"
                  />
                </div>
              </div>
              <div class="col-md-6">
                <div class="mb-3">
                  <label for="department" class="form-label">
                    Department</label
                  >
                  <input
                    type="text"
                    class="form-control"
                    id="department"
                    readonly
                    aria-describedby="emailHelp"
                  />
                </div>
              </div>
              <div class="col-md-6">
                <div class="mb-3">
                  <label for="emp-type" class="form-label">
                    Employement Type</label
                  >
                  <input
                    type="text"
                    class="form-control"
                    id="emp-type"
                    readonly
                    aria-describedby="emailHelp"
                  />
                </div>
              </div>
              <div class="col-md-6">
                <div class="mb-3">
                  <label for="repo-man" class="form-label">
                    Reporting manager</label
                  >
                  <input
                    type="text"
                    class="form-control"
                    id="repo-man"
                    readonly
                    aria-describedby="emailHelp"
                  />
                </div>
              </div>
        </div>
        <div class="d-flex justify-content-center">
          <%= f.submit "Save",class:'btn addempbtn me-2' %>
          <%= link_to 'Cancel', user_path(f.object.id), class:'btn btn-danger rounded-pill me-3'%>
        </div>
        <%end%>
</div>
</div>