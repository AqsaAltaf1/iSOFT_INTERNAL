<div class="container" controller="short-type-field">
    <div class="form_all">
      <%= form_with(model: apply_leave) do |form| %>
        <% if apply_leave.errors.any? %>
          <div style="color: red">            
            <ul>
              <% apply_leave.errors.each do |error| %>
              <li><%= error.full_message %></li>
              <% end %>
            </ul>
          </div>
        <% end %>
        <div class="mb-3">
          <div>
            <label for="allowed_leave_type">Leave Type</label>
            <%= form.text_field :allowed_leave_type, :rows => 3, :cols => 33 , class: "form-control", placeholder: "Enter leave type", data: {controller: "short-type-allowed-hours", action: "input->short-type-allowed-hours#hoursfield"} %><br>
          </div>
        </div>
        <div class="mb-3">
          <div class="alloweddays">
            <label for="allowed_day">Allowed Days</label>
            <%= form.number_field :allowed_day, :rows => 3, :cols => 33 ,min:0, class: "form-control", placeholder: "Enter days"%><br>
          </div>
          <div class="allowedhours">
            <label for="allowed_hours">Allowed hours</label>
            <%= form.number_field :allowed_hours, :rows => 3, :cols => 33 ,min:0, class: "form-control", placeholder: "Enter hours"%><br>
          </div>
        </div>
        <div class="mb-3">
          <div>
            <label for="type">Type</label>
            <%= form.select :paid_type, get_type, { prompt: "Select type" }, class: 'form-select mb-2'%>
        </div>
        <div class="d-flex justify-content-center">
          <button class="btn leavecreatebtn" type="submit">Submit</button>
        </div>
    <% end %>
  </div>
</div>