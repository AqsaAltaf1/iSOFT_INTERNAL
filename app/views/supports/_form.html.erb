<div class="container">
  <div class="form_all">
    <%= form_with(model: support) do |form| %>
      <div class="card-title text-center">
        <h2 class="p-3 ">Have any query</h2>
      </div>
      <div class="mb-3">
        <%= form.label :subject, style: "display: block" %>
        <%= form.text_field :subject,class: "form-control" %>
        <% @support.errors.full_messages_for(:subject).each do |message| %>
          <p class='text-danger user-error'><%= message %></p>
        <% end %>
      </div>

      <div class="mb-3">
        <%= form.label :email, style: "display: block" %>
        <%= form.text_field :email, value: current_user.email, readonly: true,class: "form-control" %>
      </div>

      <div class="mb-3">
        <%= form.label :description, style: "display: block" %>
        <%= form.text_area :description ,class: "form-control"%>
        <% @support.errors.full_messages_for(:description).each do |message| %>
          <p class='text-danger user-error'><%= message %></p>
        <% end %>
      </div>

      <div>
        <%= form.hidden_field :user_id, value: current_user.id %>
      </div>

      <div class="d-flex justify-content-center">
        <button class="btn leavecreatebtn" type="submit">Create</button>
      </div>
    <% end %>
  </div>
</div>
    