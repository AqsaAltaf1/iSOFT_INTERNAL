<div class="container">
  <div class="form_all">
    <%= form_with(model: upcoming_holiday) do |form| %>
      <div class="card-title text-center">
        <h2 class="p-3 ">New Holiday</h2>
      </div>

      <div class="mb-3">
        <%= form.label :title, style: "display: block" %>
        <%= form.text_field :title,class: "form-control" %>
        <% upcoming_holiday.errors.full_messages_for(:title).each do |message| %>
          <p class='text-danger user-error'><%= message %></p>
        <% end %>
      </div>

      <div class="mb-3">
        <%= form.label :date, style: "display: block" %>
        <%= form.datetime_field :date ,class: "form-control"%>
        <% upcoming_holiday.errors.full_messages_for(:date).each do |message| %>
          <p class='text-danger user-error'><%= message %></p>
        <% end %>
      </div>

      <div class="mb-3">
        <%= form.label :description, style: "display: block" %>
        <%= form.text_area :description ,class: "form-control"%>
        <% upcoming_holiday.errors.full_messages_for(:description).each do |message| %>
          <p class='text-danger user-error'><%= message %></p>
        <% end %>
      </div>

      
      <div class="d-flex justify-content-center">
        <%= form.submit upcoming_holiday.new_record? ? "Create " : "Update ", class:"btn add-announcment-button" %>
      </div>
    <% end %>
  </div>
</div>